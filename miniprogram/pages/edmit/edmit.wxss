.edmit .edmit_nav {
  width: 100%;
  overflow: hidden;
  margin-top: 20rpx;
}

.edmit .edmit_nav .nav_box {
  width: 1000rpx;
  padding: 0rpx 40rpx;

}

.edmit .edmit_nav .nav_item {
  float: left;
  width: 160rpx;
  margin-right: 10rpx;
  margin-bottom: 20rpx;
}

.edmit .edmit_nav .nav_item .img {
  width: 160rpx;
  height: 80rpx;
}

.edmit .edmit_nav .nav_item .item_title {
  font-size: 24rpx;
  color: #999;
  width: 160rpx;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
}


/* 编辑区域 */
.edmit .edmit_context {
  box-shadow: 0rpx 0rpx 6rpx 2rpx #ccc;
  margin: 0 auto;
  border-radius: 10rpx;
  overflow: hidden;
}





/* 普通日记 */
.diary {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 20rpx;

}

.diary .diary_title {}

.diary .diary_title .diary_img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  box-shadow: 0rpx 0rpx 6rpx 2rpx #ccc;
  margin-right: 20rpx;
  margin-left: 10rpx;
}

.diary .diary_info .weater_text {
  height: 80rpx;
  line-height: 80rpx;
  color: #666;
  font-weight: 700;
  font-size: 40rpx;
  padding: 0rpx 20rpx;

}

.diary .diary_info .weater_img {
  width: 80rpx;
  height: 80rpx;
}

.diary .diary_info .date_text {
  color: #999;
  font-size: 26rpx;
  padding: 0rpx 20rpx;
}

.diary .diary_content {
  margin-top: 30rpx;
  padding: 0rpx 10rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.diary .diary_content .diary_emdit {
  padding: 0rpx 10rpx;
  width: 100%;

  box-sizing: border-box;
  color: #666;
  font-size: 32rpx;
  line-height: 2;
}


/* 账单 */
.money {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 20rpx;
}

.money .money_title {
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 40rpx;
  font-weight: 700;
  letter-spacing: 30rpx;
  /* border-bottom: 2rpx solid #ccc; */
}


.plant {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 20rpx;
}

.plant .plant_area {
  width: 100%;
  height: 100vh;
}

.plant .plant_title {
  font-size: 36rpx;
  color: seagreen;
  display: block;
  width: fit-content;
  height: 80rpx;
  font-weight: 700;
  line-height: 80rpx;
}


.plant .plant_img {
  width: fit-content;
}

.plant .small_img {
  width: 128rpx;
  height: 128rpx;
  display: block;
}

.plant .middle_img {
  width: 200rpx;
  height: 200rpx;
  display: block;
}


.plant .plant_info {
  width: 100%;
  margin-top: 30rpx;

}


/* 编辑器控件 */
.edmit_control {
  position: absolute;
  right: 0px;
  top: 200rpx;
  width: 60rpx;
}
.edmit_control .edmit_icon{
  margin-bottom: 20rpx;
  width: 60rpx;
  height: 60rpx;
}




/* 天气弹窗列表 */
.weather_list {
  width: 100%;
  height: 400rpx;
  background-color: #fff;
  box-sizing: border-box;
  box-shadow: 0px 2px 3px 2px #ccc;
  position: absolute;
  bottom: 0rpx;
  left: 0;
  overflow:scroll;
  padding: 80rpx 20rpx 40rpx;
  z-index: 100;

}


.weather_top {
  background-color: #fff;
  width: 100%;
  height: 80rpx;
  margin-top: 0px;
  padding: 0 20rpx;
  box-sizing: border-box;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  
}


.weather_title {
  height: 100%;
  line-height: 80rpx;
  font-weight: 700;
  font-weight: 32rpx;
}

.weather_list .weather_item {
  width: 140rpx;
  float: left;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.weather_list .weather_item .weather_img {
  width: 80rpx;
  display: block;
  height: 80rpx;
  margin-left: 30rpx;
}

.weather_list .weatherBtn {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}